@using RestTraining.Api.DTO
@model RestTraining.Api.DTO.HotelDTO

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Hotel</legend>
        
        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Address)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address)
        </div>

        <div class="editor-label">
            @Html.Label("Reservation type")
        </div>
        <div class="editor-field">
            @{
                var types = from HotelDTO.TypeDescriminator d in Enum.GetValues(typeof(HotelDTO.TypeDescriminator))
                                 select new {ID = (int) d, Name = d.ToString()};
                var list = new SelectList(types, "ID", "Name");
                @Html.DropDownListFor(model => model.Type, list);
            }
            @Html.ValidationMessageFor(model => model.Type)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
        @Html.ActionLink("Edit Hotel Numbers", MVC.HotelNumbers.Index(@Model.Id))
    </fieldset>
}