@using RestTraining.Api.DTO
@model List<HotelDTO>

@{
    ViewBag.Title = "All hotels";
}

<h2>All hotels</h2>
<div class="row">
    <div class="span4">
         @Html.ActionLink("Add", MVC.Hotels.Create(), new { @class="btn btn-large btn-block btn-primary"})
    </div>

    <div class="span12">
        <ul class="thumbnails">
            @foreach (var hotel in @Model)
            {
                 @Html.DisplayFor(x => hotel, MVC.Shared.Views.DisplayTemplates.HotelDTO)  
            }
        </ul>
    </div>
</div>
