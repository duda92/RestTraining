@using RestTraining.Web
@model List<RestTraining.Api.DTO.HotelNumberDTO>

@{
    var viewDateProvider = new ViewDataProviderForView(this);
}

@Html.ActionLink("Add", MVC.HotelNumbers.Create(viewDateProvider.HotelId), new { @class="btn btn-primary btn-small"})

<ul>
    @for (int index = 0; index < Model.Count; index++)
    {
        var hotelNumber = Model[index];
        <li>
            <div class="hotel-number-description">
                #@index
                @Html.ActionLink("Edit", MVC.HotelNumbers.Edit(viewDateProvider.HotelId, hotelNumber.Id ), new { @class="btn btn-primary btn-small"})
                @Html.ActionLink("Delete", MVC.HotelNumbers.Delete(viewDateProvider.HotelId, hotelNumber.Id ), new { @class="btn btn-primary btn-small"})
                <h3>Number includes:</h3>
                <ul>
                    @foreach (var include in hotelNumber.IncludeItems)
                    {
                        <li>
                            @include.IncludeItemType.ToString()
                        </li>    
                    }
                </ul>
                <h3>Window views:</h3>
                <ul>
                    @foreach (var windowView in hotelNumber.WindowViews)
                    {
                        <li>
                            @windowView.ToString()
                        </li>    
                    }
                </ul>
            </div>
        </li>
    }
</ul>